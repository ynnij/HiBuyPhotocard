<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_color"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="hi.buyphotocard.hbpApp.MessageActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="8"
            >



            <ImageButton
                android:id="@+id/ImageButton_chattinglist"
                android:layout_width="15dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
              android:backgroundTint="#ffffff"
                android:background="@drawable/back_icon" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:src="@drawable/chat_title"
                android:background="@drawable/chat_title">


                <TextView
                    android:id="@+id/TextView_Bigtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="user"
                    android:textColor="#646464"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageActivity_reclclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:scrollbars="vertical" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal"
            android:weightSum="8"
            android:background="@color/white"
            >





            <ImageButton
                android:id="@+id/ImageButton_plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:background="@null"
                android:src="@drawable/plus_icon"

                android:layout_weight="0.8"
                />



                <EditText
                    android:id="@+id/messageActivity_editText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="6.4"
                    android:background="@drawable/chat_bubble"
                    android:src="@null"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignEnd="@+id/ImageView_white_box_nonradius2"
                    android:layout_alignRight="@+id/ImageView_white_box_nonradius2"

                    />

                <ImageButton
                    android:id="@+id/messageActivity_button"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_alignRight="@+id/ImageView_white_box_nonradius2"
                    android:layout_marginTop="6dp"

                    android:layout_weight="0.8"
                    android:background="@null"
                    android:src="@drawable/enterbutton" />





        </LinearLayout>

    </LinearLayout>