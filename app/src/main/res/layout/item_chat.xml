<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@drawable/people_fragment_background"
    android:layout_gravity="center_horizontal"

    >

    <ImageView
        android:id="@+id/chatitem_imageview"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:background="@null"
        android:layout_marginStart="10dp"
        android:src="@drawable/login_btn"
        android:layout_gravity="center_vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/chatitem_textview_title"
            android:text="푸딩딩"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#646464"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/chatitem_textview_lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="포카 거래 완료인가요?"
            android:textSize="16dp"
            android:textColor="#646464" />

        <TextView
            android:id="@+id/chatitem_textview_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:text="11:11"
            android:textSize="12dp"
            android:textColor="#646464" />

    </RelativeLayout>




</LinearLayout>