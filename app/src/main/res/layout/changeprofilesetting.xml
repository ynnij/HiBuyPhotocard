<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"

        >




        <TextView
            android:id="@+id/sample1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="65dp"
            android:text="프로필 설정"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_ficture_Change"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_marginLeft="110dp"
            android:layout_marginTop="90dp"
            android:layout_marginRight="15dp"

            android:background="@drawable/circle"

            />


        <TextView
            android:id="@+id/sample2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="180dp"
            android:layout_marginLeft="85dp"
            android:text="설정할 프로필 사진을 선택해주세요."
            android:textSize="9sp"
            android:textStyle="bold"
            android:gravity="center"
            />

        <LinearLayout

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/change_information_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="220dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/sample3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"

                android:gravity="center"
                android:text="닉네임"
                android:textSize="10sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Change_nickname"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:paddingLeft="10dp"
                android:background="@drawable/setting_edittext"

                android:hint="닉네임을 입력해주세요."
                android:textSize="14sp"
                android:maxLength="10"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />


        </LinearLayout>

        <LinearLayout

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/change_information_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/sample5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:text="최애 그룹"
                android:textSize="10sp"

                android:textStyle="bold"
                android:layout_gravity="top"
                />






        </LinearLayout>

        <AutoCompleteTextView

            android:id="@+id/change_love"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="360dp"
            android:background="@drawable/setting_edittext"
            android:completionThreshold="1"
            android:hint="최애를 선택해주세요"
            android:lineHeight="0dp"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sample6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="345dp"
            android:gravity="center"
            android:text=" 선택한 최애가 속한 그룹의 팬덤명이 닉네임 옆에 표시됩니다."
            android:textSize="10sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/member_label_Change"
            android:layout_width="250dp"
            android:layout_height="40dp"

            android:layout_marginLeft="60dp"
            android:layout_marginTop="395dp"
            android:isScrollContainer="true"
            android:orientation="horizontal" />

        <LinearLayout

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/change_information_best_idol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="368dp"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/sample7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"

                android:text="최애 멤버"
                android:textSize="10sp"
                android:textStyle="bold" />


        </LinearLayout>


        <AutoCompleteTextView
            android:id="@+id/change_favorit"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="280dp"
            android:background="@drawable/setting_edittext"
            android:completionThreshold="1"
            android:hint="선호아이돌을 선택해주세요"
            android:lineHeight="0dp"
            android:paddingLeft="10dp"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/group_label_Change"
            android:layout_width="250dp"
            android:layout_height="40dp"

            android:orientation="horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="313dp"
            android:isScrollContainer="true"
            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_profile_Change"
            android:layout_width="120dp"
            android:layout_height="40dp"


            android:layout_marginTop="600dp"
            android:text="변경하기"
            android:textStyle="bold"

            android:layout_marginLeft="90dp"
            android:textSize="14sp"
            android:textColor="#FFFFFF"

            android:background="@drawable/normal_button_blue"

            />
    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>